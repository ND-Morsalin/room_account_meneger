<%- include('./partials/header.ejs'); %>

<div class="container ">
  <div class="p-3 d-flex justify-content-center align-items-center">

    <form action="/login" method="POST" class="signup-form bg-dark p-4 text-center my-5 rounded">
      <div class="login-img">
        <div class="img-wrapper">
          <img src="https://i.ibb.co/8DGzsvq/undraw-profile-pic-ic-5-t-1.png" alt="login img">
        </div>

      </div>
      <h3 class="app-title mb-4">Login - Room Application</h3>
      <div class="input-wrapper">
        <input type="tel" id="phone" placeholder="Enter your Phone Number" name="phone"
          value="<%= errors? data.phone :'' %>">
      </div>
      <% if (errors.phone) { %>
      <p class="error"><%= errors.phone.msg %> </p>
      <% } %>

      <div class="input-wrapper">
        <input type="password" id="password" placeholder="Enter your password" name="password"
          value="<%= errors? data.password :'' %>">
      </div>
      <% if (errors.password) { %>
      <p class="error"><%= errors.password.msg %> </p>
      <% } %>
      <% if (errors.common) { %>
      <p class="error"><%= errors.common.msg %> </p>
      <% } %>

      <input type="submit" id="submit" class="submit" value="Submit" name="submit">
      <a href="/signup" class="text-decoration-none mt-3 d-block"> Aren't You Register Please signup</a>
    </form>

  </div>
</div>

<!-- JavaScript Bundle with Popper -->
