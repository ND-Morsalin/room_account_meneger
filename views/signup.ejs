<%- include('./partials/header.ejs'); %>
  <div class="container ">
    <div class="p-3">

      <form method="POST" action="/signup" class="signup-form bg-dark p-4 text-center my-5 rounded">
        <div class="input-wrapper">
          <input type="number" id="bdnumber" placeholder="Enter ymyour BD Number" name="bdnumber" value="<%= data.bdnumber? data.bdnumber : '' %>">
        </div>
        <% if (errors.bdnumber) { %>
        <p class="error  "><%= errors.bdnumber.msg %> </p>
        <% } %>

        <div class="input-wrapper">
          <input type="text" id="rank" placeholder="Enter your Rank" name="rank" value="<%= data.rank? data.rank : '' %>">
        </div>

        <% if (errors.rank) { %>
        <p class="error  "><%= errors.rank.msg %> </p>
        <% } %>
        <div class="input-wrapper">
          <input type="text" id="name" placeholder="Enter your Name" name="name" value="<%= data.name? data.name : '' %>">
        </div>
        <% if (errors.name) { %>
        <p class="error  "><%= errors.name.msg %> </p>
        <% } %>
        <div class="input-wrapper">
          <input type="tel" id="phone" placeholder="Enter your Phone Number" name="phone" value="<%= data.phone? data.phone : '' %>">
        </div>

        <% if (errors.phone) { %>
        <p class="error  "><%= errors.phone.msg %> </p>
        <% } %>
        <div class="input-wrapper">
          <input type="text" id="section" placeholder="Enter your Section" name="section" value="<%= data.section? data.section : '' %>">
        </div>

        <% if (errors.section) { %>
        <p class="error  "><%= errors.section.msg %> </p>
        <% } %>
        <div class="input-wrapper">
          <input type="password" id="password" placeholder="Enter your password" name="password" value="<%= data.password? data.password : '' %>">
        </div>

        <% if (errors.password) { %>
        <p class="error  "><%= errors.password.msg %> </p>
        <% } %>
        <div class="input-wrapper">
          <input type="password" id="cPassword" placeholder="Confirm Your password" name="cPassword" value="<%= data.cPassword? data.cPassword : '' %>">
        </div>

        <% if (errors.cPassword) { %>
        <p class="error"><%= errors.cPassword.msg %> </p>
        <% } %>

        <% if (errors.common) { %>
        <p class="error  "><%= errors.common.msg %> </p>
        <% } %>
        <input type="submit" id="submit" class="submit" value="Submit" name="submit">

        <a href="/login" class="text-decoration-none mt-3 d-block"> Already Have an account? Login </a>
      </form>
    </div>
  </div>

  <!-- JavaScript Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
  </script>

  <script src="js/script.js"></script>

</body>

</html>